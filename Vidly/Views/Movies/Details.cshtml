@model Vidly.Models.Movie

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2>@Model.Name</h2>
<strong>
    @if (@Model.Genre != null)
    {
        <li>@Model.Genre.Name</li>
    }

    @if (@Model.ReleaseDate != null)
    {
        <li>@Model.ReleaseDate.ToShortDateString()</li>
    }

    @if (@Model.DateAdded != null)
    {
        <li>@Model.DateAdded.ToLongDateString()</li>
    }

    @if (@Model.Stock != null)
    {
        <li>@Model.Stock</li>
    }
</strong>